@model IEnumerable<Inveon.ADMIN.Models.ProductViewModel>
<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <h4 class="m-t-0 header-title"><b>ÜRÜN LİSTESİ</b></h4>
                        <table id="datatable-colvid" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Main  Image
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Barcode
                                    </th>
                                    <th>
                                        Price
                                    </th>
                                    <th>
                                        Quantity
                                    </th>
                                    <th>
                                        Record Date
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th style="width: 100px">
                                        <a href="/urun/ekle" class="btn btn-default btn-md waves-effect waves-light" data-animation="fadein" data-overlaySpeed="200" data-overlayColor="#36404a"><i class="md md-add"></i>Ürün Ekle</a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="/assets/images/products/@item.MediaList.FirstOrDefault()" alt="" class="img-responsive img-rounded" width="100px;" />
                                        </td>

                                        <td>
                                            <span>
                                                @item.Name
                                            </span>

                                        <td>
                                            <span>
                                                @item.Description
                                            </span>
                                        </td>

                                        <td>

                                            <span>
                                                @item.Barcode
                                            </span>

                                        </td>
                                        <td>
                                            <span>
                                                ₺ @item.Price
                                            </span>
                                        </td>
                                        <td>
                                            <span>
                                                @item.Quantity
                                            </span>
                                        </td>
                                        <td>
                                            <span>
                                                @item.RecordDate
                                            </span>
                                        </td>

                                        <td>
                                            <span class="label label-@(item.RecordIsDeleted ? "danger" : "success")">@(item.RecordIsDeleted ? "Pasif" : "Aktif")</span>
                                        </td>
                                        <td>
                                            <a href="/urun/duzenle/@item.Id" class="table-action-btn"><i class="md md-edit"></i></a>
                                            @if (!item.RecordIsDeleted)
                                            {
                                                <a href="/urun/sil/@item.Id" class="table-action-btn"><i class="md md-delete"></i></a>
                                            }
                                            else
                                            {
                                                <a href="/urun/aktifyap/@item.Id" class="table-action-btn"><i class="md md-check"></i></a>
                                            }
                                        </td>
                                    </tr>
                                }
                            <tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>